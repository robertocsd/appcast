{
    "id": "hello_world",
    "screen": false,
    "channels": [],
    "requires": [],
    "inputs": {
      "title": {
        "source": "inline",
        "value": "Hello World"
      },
      "counter": {
        "source": "globalState",
        "values": {
          "defaultValue": "0"
        }
      }
    },
    "structure": {
      "type": "column",
      "values": {
        "mainAxisAlignment": "spaceAround",
        "children": [
          {
            "type": "text",
            "values": {
              "text": "${title}"
            }
          },
          {
            "type": "row",
            "values": {
              "children": [
                {
                  "type": "text",
                  "values": {
                    "text": "Current count: "
                  }
                },
                {
                  "type": "text",
                  "values": {
                    "text": "${counter}"
                  }
                }
              ]
            }
          },
          {
            "type": "button",
            "values": {
              "text": "Increment",
              "onTap": [
                {
                  "handler": "incrementCounter",
                  "values": {
                    "name": "counter"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
